.Media {
  display block
  position relative
  margin 0 0 20px
  clearfix()
  &--embedded &__content:before {
    display block
    content ''
    padding-bottom 56.25%
  }
  &__content {
    display block
    position relative
    margin-bottom 20px
    &:last-child {
      margin-bottom 0
    }

    img {
      display block
      max-width 100%
    }

    iframe {
      position absolute
      top 0
      left 0
      width 100%
      height 100%
    }
  }
}