.Heading {
	display block
	font-family $fontFamily
	margin-left -0.07em

	&--level {
		&-xxl {
			xxl()
		}
		&-xl {
			xl()
		}
		&-1 {
			heading1()
		}
		&-2 {
			heading2()
		}
		&-3 {
			heading3()
		}
		&-4 {
			heading4()
		}
		&-5 {
			heading5()
		}
		&-6 {
			heading6()
		}
	}
	&--withoutText {
		layout1()
	}
	&:last-child {
		margin-bottom 0
	}
}
