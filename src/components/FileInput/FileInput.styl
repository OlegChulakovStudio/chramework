.FileInput {
  width 100%
  box-sizing border-box
  height 96px
  border 1px dashed #979797
  cursor pointer
  position relative
  &__reset {
    position absolute
    top 50%
    margin-top -20px
    right 20px
    display block
    padding 20px
    z-index 1000
    cursor pointer
    &:before, &:after {
      content ''
      position absolute
      height 3px
      width 12px
      background #979797
      transform rotate(45deg)
      transform-origin center
      top 50%
      left 50%
      margin-left -6px
      margin-right -6px
      border-radius 2px
      transition background $duration
    }
    &:after {
      transform rotate(-45deg)
    }
    &:hover {
      &:before, &:after {
        background $linkColor
        faster()
      }
    }
  }
  &__field {
    & {
      width 100%
      height 100%
      font-family $fontFamily
      color $textColor
      display flex
      align-items center
      justify-content center
    }
    p {
      color #979797
      text-align center
    }
    &--active {
      p {
        color $linkColor
      }
    }
  }
  &__innerText {
    max-width 70%
    text-overflow ellipsis
    overflow hidden
  }
}