$top = 20px

.SelectField {
  & {
    font-family $fontFamily
    padding-top $top
    position relative
    margin-bottom 40px
    transition opacity $duration $easeOutCubic
    &:last-child {
      margin-bottom 0
    }
    &_disabled {
      opacity 0.4
    }
  }
  .Select-placeholder, .Select--single > .Select-control .Select-value {
    padding-left 0
    line-height 1.2
    top auto
    bottom 3px
  }
  .Select-control {
    border none
    background none
    border-bottom: 1px solid #979797;
    border-radius 0
    outline none !important
    box-shadow none !important
    border-color #979797 !important
    height auto
  }
  .Select-input {
    padding-left 0
    height 26px
    font-size 16px
    line-height 1.3
  }
  .Select-clear-zone {
    display none
  }
  .Select-arrow {
    border-width 1px
    border-top none
    border-left none
    border-color $textColor
    width 12px
    height 12px
    transform rotate(45deg) translateZ(0)
    transition transform $duration
    transform-origin 65% 75%
    will-change transform
    vertical-align middle
    top -4px
  }
  .is-open .Select-arrow {
    top -4px
    border-width 1px
    border-top none
    border-left none
    border-color $textColor
    width 12px
    height 12px
    transform rotate(-135deg) translateZ(0)
  }
  .Select-input > input {
    padding 0
  }
  &__label {
    position absolute
    left 0
    top 20px
    padding 0
    max-width 100%
    line-height 1.3
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    color: alpha(#222629,60%)
    font-weight 300
    pointer-events none
    transform translateZ(0)
    transform-origin 0 0
    user-select none
    cursor text
    transition transform $duration*0.5 $easeOutCubic, color $duration*0.5 $easeOutCubic, font-size $duration*0.5 $easeOutCubic
  }

  &--focus:after {
    transform scaleX(1)
  }

  &--value &__label,
  &--focus &__label {
    transform translateY( (- $top) ) scale(0.75) translateZ(0)
  }

  .Select-menu-outer {
    border none
    border-radius 0 0 4px 4px
    box-shadow 0 3px 6px 0 alpha(#000, 10%)
  }

  .Select-noresults,
  .Select-option {
    color inherit
    padding 10px 20px
  }
  .Select-option.is-selected {
    background none;
    color inherit;
    font-weight bold
  }
  .Select-option.is-focused {
    background $linkColor
    color #FFF
  }

}