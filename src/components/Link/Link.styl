.Link {
	link()

	@media $phone {
		font-size 18px
	}
	&:last-child {
		margin-bottom 0
	}
	&__target-blank {
		position absolute
		bottom 0
		transform translateY(0.25em)
		width 1.714em
		height 1.714em
		display inline-block
		vertical-align middle
		fill currentColor

		svg {
			position absolute
			top 0
			left 0
			width 100%
			height 100%
		}
	}
	&_bold {
		font-weight $bold
		font-size 16px

		@media $phone {
			font-size 18px
		}
	}
	&_light {
		color #FFFFFF
	}
	&_external {
		position relative
		padding-right 1.714em
	}
}
