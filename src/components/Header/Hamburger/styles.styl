.Hamburger {
	position relative
	display inline-block
	cursor pointer
	width 24px
	height 14px

	&:before {
		$space = 16px
		content ''
		position absolute
		top (- $space)
		left (- $space)
		bottom (- $space)
		right (- $space)
	}
	&__line {
		position absolute
		display block
		width 100%
		height 4px
		background $textColor
		left 50%
		margin-left -12px
		transition transform 0.25s cubic-bezier(0.75, 0, 0.25, 1), background-color 0.3s

		.Hamburger_dark & {
			background $lightTextColor
		}
		.Header_light & {
			background $textColor
		}
		&:first-child {
			top 0
		}
		&:last-child {
			bottom 0
		}
	}
	&:hover &__line {
		background $linkColor

		.Hamburger_dark& {
			background #fff
		}
	}
	&_open &__line {
		transition transform 0.3s cubic-bezier(0.75, 0, 0.25, 1), background-color 0.3s

		&:first-child {
			transform translateY(5px) rotate(45deg) translateZ(0)
		}
		&:last-child {
			transform translateY(-5px) rotate(-45deg) translateZ(0)
		}
	}
}