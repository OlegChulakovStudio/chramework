.ModalInfo {
	display flex
	flex-direction column
	width 100%
	height 100%
	// min-height 662px
	min-width 600px
	min-height 68.318vh
	padding 56px 62px
	background #fff
	border-radius 4px
	box-sizing border-box

	@media $verticalTablet {
		// min-height 600px
		min-width 635px
	}

	@media $phone {
		min-width auto
		padding 32px 32px 40px
		// min-height 508px
		min-height 62.563vh	
	}
	
	&__title {
		title-2()
		margin-bottom 24px

		@media $phone {
			font-size 28px
			line-height 36px
			margin-bottom 8px	
		}

		&:last-child {
			margin-bottom 0	
		}
	}
	&__text {
		max-width 400px

		&-item {
			p-1()
			margin-bottom 16px

			&:last-child {
				margin-bottom 0	
			}
		}
	}

	&__button {
		margin-top auto
		align-self flex-start	

		@media $phone {
			align-self auto		
		}
	}
}