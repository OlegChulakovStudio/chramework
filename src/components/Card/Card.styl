.Card {
  height auto
  width 100%
  position relative
  display block
  box-sizing border-box
  border-radius 4px
  background-color #FFFFFF
  padding 32px 30px 24px

  &--link{
    cursor pointer
    transition transform $duration
    color $textColor
    
    &:before{
      content ''
      box-shadow 0 12px 15px 0 rgba(161,185,220,0.38)
      opacity 0
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      border-radius 4px
      transition opacity $duration
    }
    
    &:hover{
      &:before{
        opacity 1
      }
    }
    &:active {
      transform translateY(2px)
      faster()
    }

  }
}