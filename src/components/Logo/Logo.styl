.Logo {
	position: relative;
	display: inline-block;
	vertical-align: top;
	text-decoration: none;
	height: 28px;
	font-size: 0;
	user-select: none;

	&__sufix {
		font-weight: $bold;
		text-transform: uppercase;
		letter-spacing: 0.06em;
		font-size: 16px;
		padding-top: 7px;
		padding-left: 6px;
		display: inline-block;
		vertical-align: top;
		line-height: 1;

		@media $phone {
			padding-top: 4.5px;
			font-size: 11.8px;
			padding-left: 4px;
			transform: translateY(2%) translateZ(0);
		}
	}

	&__iconSuffix {
		fill: $textColor;
	}

	&__link {
		fullsize();
	}

	&__icon {
		fill: #FFF45F;
		display: inline-block;
		width: 120px;
		height: 28px;
		font-size: 0;

		@media $phone {
			width: 86px;
			height: 20px;
		}

		.Logo__rectBg {
			transition: fill 0.2s 0.1s;
			fill: $brandColor;
		}

		.Logo__text {
			fill: $textColor;
		}

		.Logo--light & {
			.Logo__rectBg {
				fill: #fff;
				transition: fill 0.2s;
			}
		}

		.Logo--black & {
			.Logo__rectBg {
				fill: $textColor;
			}

			.Logo__text {
				fill: #fff;
			}
		}

		&_coronavirus {
			width 202px

			.Logo--light & {
				.Logo__text {
					fill: #fff;
				}
			}
		}
	}

	&--small {
		height: 25px;

		.Logo__icon {
			height: 25px;
			width: 110px;
		}

		.Logo__sufix {
			font-size: 15px;
			padding-left: 4px;
			padding-top: 6px;
		}
	}

	&--light {
		.Logo__ingroup {
			color: #ffffff;

			a {
				color: #ffffff;

				&:hover {
					color: $linkColor;
				}
			}
		}

		.Logo__iconSuffix {
			fill: #ffffff;
		}
	}

	&--isBlue {
		.Logo__icon {
			fill: #fff;
		}

		.Logo__text {
			fill: $blueColor;
		}
	}

	&--ingroup {
		height: auto;
	}

	&--wh {
		.Logo__icon {
			fill: #fff;

			&_coronavirus {
				fill none

				.Logo__text {
					fill: #fff;
				}
			}
		}
	}

	&--bl {
		.Logo__icon {
			fill: #000;
		}
	}

	&__ingroup {
		position: relative;
		z-index: 10;
		font-size: 9px;
		line-height: 1;
		color: $secondTextColor;
		display: block;
		text-transform: uppercase;
		letter-spacing: 1.55px;
		padding-top: 8px;
		transition: opacity $duration;

		@media $phone {
			font-size: 8.3px;
			padding-top: 7px;
		}

		a {
			color: $linkColor;

			@media $phone {
				color: $secondTextColor;
			}

			&:hover {
				color: $linkHoverColor;

				@media $phone {
					color: $linkColor;
				}
			}
		}
	}
}