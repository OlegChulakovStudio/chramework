.Logo {
	position relative
	width 120px
	height 28px
	display inline-block
	vertical-align top
	text-decoration none

	&__link {
		fullsize()
	}
	&__icon {
		fill #FFF45F
		display block
		width 100%
		height 100%

		.Logo__rectBg {
			transition fill 0.2s 0.1s
			fill $brandColor
		}
		.Logo__text {
			fill $textColor
		}
		.Logo--light & {
			.Logo__rectBg {
				fill #fff
				transition fill 0.2s
			}
		}
		.Logo--black & {
			.Logo__rectBg {
				fill $textColor
			}
			.Logo__text {
				fill #fff
			}
		}
	}

	&--small {
		width 110px
		height 25px
	}
}