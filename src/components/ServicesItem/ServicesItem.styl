.ServicesItem {
	position relative
	display inline-block
	height 220px
	width 220px
	cursor pointer
	box-sizing border-box
	padding 40px 32px 24px
	font-size 16px
	text-align center
	vertical-align top
	border-radius 4px
	color $textColor
	background-color #F8F9F9

	&:hover {
		color $linkColor

		.Link__target-blank {
			opacity 1
			faster()
		}
	}
	&:last-child {
		margin-right 0
	}
	@media $notebook {
		width 180px
		height 180px
		font-size 13px
		padding 32px 24px 16px
	}
	@media $verticalTablet {
		width 100%
		height auto
		padding 0 16px
		margin-right 0
		text-align left
		background #F8F9F9
		font-size 18px
		font-weight bold
	}
	@media $phone {
		padding-left 12px
	}

	&__icon {
		width 90px
		height 90px
		fill $linkColor
		margin 0 auto
		margin-bottom 8px
		background-position center
		background-size contain
		background-repeat no-repeat
		transform translateZ(0)

		@media $notebook {
			margin-bottom 0
		}
		svg {
			max-width 100%
			height 100%
			width 90px !important
		}
		@media $verticalTablet {
			display inline-block
			vertical-align middle
			font-size 0
			width 72px
			height 72px
		}
		@media $smallPhone {
			width 62px
			height 62px
		}
	}
	&__label {
		font-weight $bold
		font-size 14px
		line-height 1.214285

		@media $verticalTablet {
			position relative
			display inline-block
			vertical-align middle
			padding-left 16px
			max-width calc(100% - 96px)
		}
		@media $phone {
			font-size 16px
			max-width 100%
		}

		@media $smallPhone {
			padding-left 8px
		}
	}
	.Link__target-blank {
		position absolute
		right 16px
		top 14px
		width 12px
		height 12px
		fill $linkColor
		opacity 0
		transition $duration

		svg {
			width 100%
			height 100%
		}
		@media $verticalTablet {
			opacity 1
			position static
			width 1.714em
			height 1.714em
			margin-left -0.1428em
			margin-top -0.1428em
		}
	}
}