.Summary {
	font-size 0
	max-width 1080px
	display flex
	justify-content space-between
	layout1()

	@media $verticalTablet {
		text-align left
		flex-wrap wrap
	}
	@media $phone {
		margin-left -16px
		margin-right -16px
	}
	&__content {
		display inline-block
		vertical-align middle
		width 100%
	}
	&__item {
		font-size 16px
		display inline-block
		vertical-align top
		box-sizing border-box

		&:last-child {
			margin-bottom 0
		}
		@media $verticalTablet {
			width 50%
			margin-bottom 40px
			padding 0 10px
			vertical-align top

			&:last-child {
				margin-right 0
			}
		}
		@media $phone {
			padding 0
		}
		&_medal {
			display inline-block
			min-width 208px
			text-align center

			@media $verticalTablet {
				min-width 0
			}
			&:before {
				content ''
				background-size contain
				background-repeat no-repeat
				background-position center
				display block
				margin-right 8px
				width 60px
				height 71.31px
				margin 0 auto
				vertical-align top
				margin-top -16px
				margin-bottom 8px

				@media $verticalTablet {
					margin-top 0
				}
				@media $phone {
					margin-top 0
					margin-bottom 6px
				}
			}
			&1:before {
				background-image url('medal_1.png')
			}
			&2:before {
				background-image url('medal_2.png')
			}
			&8:before {
				background-image url('medal_8.png')
			}
		}
		&_counter {
			text-align center
			font-weight bold

			.Summary__text {
				font-size 16px
			}
			@media $verticalTablet {
				width 50%
				margin 0
				margin-bottom 40px
			}
		}
		&_inline {
			@media $phone {
				float left
				width 50%
			}
		}
	}
	&__number {
		font-size 60px
		font-weight $bold
		line-height 1
		margin-bottom 3px

		&__plus {
			font-weight normal
		}
		@media $phone {
			font-size 40px
		}
	}
	&__text {
		text-align center

		@media $phone {
			display flex
			flex-direction column
			align-items center
		}
		nobr {
			line-height 0.9
		}
	}
	&__text-link {
		line-height 1.25 !important

		@media $phone {
			font-size 14px
		}
	}
	&__count {
		text-align center
		display block
		margin-bottom 0

		@media $verticalTablet {
			display inline-block
		}
		@media $phone {
			.Text {
				line-height 1.4
			}
		}
	}
	&__title {
		white-space nowrap
		text-align center
		box-sizing border-box
		margin-bottom 6px
		vertical-align middle

		@media $verticalTablet {
			height auto
			padding-top 0
			white-space normal
		}
		@media $phone {
			max-width 160px
			margin-left auto
			margin-right auto
			margin-bottom 3px
		}
	}
}
