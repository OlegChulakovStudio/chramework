.Summary {
	font-size 0
	max-width 1080px
	display flex
	justify-content space-between
	layout1()
	padding-top 16px
	@media $verticalTablet {
		padding-top 0
		text-align left
		flex-wrap wrap
	}
	@media $phone {
		margin-left -16px
		margin-right -16px
	}
	&__content {
		display inline-block
		vertical-align middle
		width 100%
	}
	&__item {
		font-size 16px
		display inline-block
		vertical-align top
		box-sizing border-box

		&:last-child {
			margin-bottom 0
		}
		@media $verticalTablet {
			width 50%
			margin-bottom 40px
			padding 0 10px
			vertical-align top

			&:last-child {
				margin-right 0
			}
		}
		@media $phone {
			padding 0
		}
		&_medal {
			display inline-block
			min-width 224px
			text-align center

			@media $verticalTablet {
				min-width 0
			}
			&:before {
				content ''
				background-size contain
				background-repeat no-repeat
				background-position center
				display block
				margin-right 8px
				// width 60px
				height 71.31px
				margin 0 auto
				vertical-align top
				margin-top -16px
				margin-bottom 8px

				@media $verticalTablet {
					margin-top 0
				}
				@media $phone {
					margin-top 0
					margin-bottom 6px
				}
			}
			&1 {
				// @media $verticalTablet {
				// 	order 3
				// }
				&:before {
					background-image url('medal_1.png')
				}
			}
			&2 {
				// @media $verticalTablet {
				// 	order 4
				// }

				display none
				@media $verticalTablet {
					display block
				}
				&:before {
					background-image url('medal_2.png')
				}
			}
			&25 {
				// @media $verticalTablet {
				// 	order 4
				// }
				&:before {
					background-image url('2-5.png')
				}
				@media $verticalTablet {
					display none
				}
			}
			&5 {
				// @media $verticalTablet {
				// 	order 5
				// }
				display none
				@media $verticalTablet {
					display block
				}
				&:before {
					background-image url('medal-5.png')
				}
			}
			&9 {
				@media $verticalTablet {
					// order 6
					// margin-bottom 0
				}
				&:before {
					background-image url('medal_9.png')
				}
			}
		}
		&_counter {
			text-align center
			font-weight bold

			.Summary__text {
				font-size 16px
			}
			@media $verticalTablet {
				width 50%
				margin 0
				margin-bottom 40px
			}
		}
		&_inline {
			@media $phone {
				float left
				width 50%
			}
		}
		&_experience {
			@media $verticalTablet {
				order 6
			}
		}
		&_specialists {
			@media $verticalTablet {
				order 5
			}
		}
	}
	&__number {
		font-size 60px
		font-weight $bold
		line-height 1
		margin-bottom 3px

		&__plus {
			font-weight normal
		}
		@media $phone {
			font-size 40px
		}
	}
	&__text {
		text-align center
		margin 0 auto

		@media $phone {
			display flex
			flex-direction column
			align-items center
		}
	}
	// &__text-link {
	// 	line-height 1.25 !important

	// 	@media $phone {
	// 		font-size 14px
	// 	}
	// }
	&__count {
		text-align center
		display block
		margin-bottom 0

		@media $verticalTablet {
			display inline-block
		}
		@media $phone {
			.Text {
				line-height 1.4
			}
		}
	}
	&__title {
		white-space nowrap
		text-align center
		box-sizing border-box
		margin-bottom 6px
		vertical-align middle

		@media $verticalTablet {
			height auto
			padding-top 0
			white-space normal
		}
		@media $phone {
			max-width 160px
			margin-left auto
			margin-right auto
			margin-bottom 3px
		}
	}
	&_awards {
		display block

		.Summary {
			&__item_medal {
				margin-left 40px
				margin-right 40px

				@media $verticalTablet {
					padding 0
					margin-left 0
					margin-right 0
				}
				&:first-child {
					margin-left 0
				}
				&:last-child {
					margin-right 0
				}
			}
		}
	}
}
