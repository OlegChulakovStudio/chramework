.InstallmentForm {
	& {
		width 100%
	}

	&__item {
		margin-bottom 64px
		clearfix()

		&:last-child {
			margin-bottom 0
		}

		&__title {
			margin-bottom 24px

			@media $phone {
				margin-bottom 8px
			}
		}

		&_members {
			.InputField *{
				text-align right
			}

			.InputField_textarea *{
				text-align left
			}
		}

		@media $phone {
			margin-bottom 48px

			.InputField_fullWidth {
				width 100%
			}

			.GrigBlock {
				display block
			}
		}
	}

	&__row {
		&-wrapper {
			display flex
			flex-wrap wrap
			margin-left -20px
			margin-right -20px
			margin-bottom -40px

			@media $tablet {
				margin-bottom -24px
			}

			@media $phone {
				margin-bottom -16px
			}
		}

		.InputShort {
			width 310px
			max-width 310px
			margin-left 20px
			margin-right 20px
			margin-bottom 40px

			@media $tablet {
				margin-bottom 24px
			}

			@media $phone {
				margin-bottom 16px
			}
		}
	}

	&__note {
		color $secondTextColor
	}

	&__rangeWrapper {
		margin-bottom 20px
	}

	&__line {
		margin-bottom 40px

		&_compact {
			width 100%
			max-width 640px
			margin-bottom 40px

			&:last-child {
				margin-bottom 0
			}

			@media $phone {
				.Feedback__line-group {
					margin-bottom 16px
				}
			}
		}

		&_right {
			display flex
			align-items center

			@media $phone {
				display block

				.Feedback__license {
					padding-left 0
				}

				.Button {
					margin-bottom 16px
				}
			}
		}

		&:last-child {
			margin-bottom 0
		}
	}

	&__license {
		max-width 420px
		padding-left 24px

		font-size 12px
		line-height (18/12)

		& > a {
			text-decoration underline
			color currentColor
			font-size inherit

			&:hover {
				color currentColor
				text-decoration none
			}
		}

		@media $verticalTablet {
			max-width 380px
		}
		@media $phone {
			padding-left 0
		}
	}

	&__button {
		position relative

		&_fetching {
			.Button__inner:before {
				content ''
				animation-duration 2s
				animation-name slidein
				animation-iteration-count infinite
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background linear-gradient(135deg, rgba(42, 126, 255, 0) 25%, rgba(42, 126, 255, 1) 50%, rgba(42, 126, 255, 0) 75%)
				transform translateX(-100%)
			}
		}

		@media (max-width 1440px) and (min-width 668px) {
			min-width 218px
		}

		@media $phone {
			min-width 218px
		}
	}

	&__error {
		color #E53935
		font-size 14px
	}

	&_white {
		color white
	}
}

.FormRow {
	display flex
	margin-bottom 40px

	&:last-child {
		margin-bottom 0
	}

	.InputShort {
		margin-right 40px

		&:last-child {
			margin-right 0
		}
	}
	@media $verticalTablet {
		flex-direction column
		margin-bottom 40px

		.InputShort {
			margin-right 0
			margin-bottom 16px

			&:last-child {
				margin-bottom 0
			}
		}
	}
}

.FormColumn {
	grid-width(3)
	grid-width( 1, margin-right )
	float left

	&:last-child {
		margin-right 0
	}
	&__item {
		display flex
		justify-content space-between
		margin-bottom 40px

		&:last-child {
			margin-bottom 0
		}

		&__input {
		}

		@media $phone {
			margin-bottom 24px
		}
	}

	&__label {
		padding-top 20px
	}

	.InputField {
		width 80px
	}

	@media $phone {
		float none
		margin-bottom 24px

		&:last-child {
			margin-bottom 0
		}
	}
}

.FormRange {
	clearfix()
	margin-bottom 40px

	&:last-child {
		margin-bottom 0
	}

	&__title {
	}

	&__item {
		float left
		display flex
		margin-right 40px
		&:last-child {
			margin-right 0
		}
	}

	&__label {
		color $secondTextColor
		margin-right 8px
		padding-top 20px
	}
}

@keyframes slidein {
	from {
		transform: translateX(-100%);
		transform: translateX(-100%);
	}

	to {
		transform: translateX(100%);
		transform: translateX(100%);
	}
}
