.SocialNetworks {
	&__link {
		display inline-block
		box-sizing border-box
		padding 4px
		width 32px
		height 32px
		transition $duration
		@media $phone {
			width 40px
			height 40px
		}
	}
	&_white {
		.SocialNetworks__link {
			fill #fff
			&:hover {
				fill $linkColor
			}
		}	
	}
	&_blue {
		.SocialNetworks__link {
			fill $linkColor
			&:hover {
				fill $linkHoverColor
			}
		}	
	}
	svg {
		width 100%
		height 100%
	}
}