subtitlePhone() {
	font-size 22px
	line-height 33px
	font-weight normal
}

subtitle() {
	font-size 24px
	line-height 36px
	font-weight normal

	@media $phone {
		subtitlePhone()
	}
}

body() {
	font-size 18px
	line-height 29px
	font-weight normal
}
bodyMedium() {
	font-size 16px
	line-height 24px
	font-weight normal

	@media $phone {
		font-size 18px
	}
}
bodySmall() {
	font-size 14px
	font-weight normal
	line-height 18px

	@media $phone {
		font-size 16px
	}
}
bodySmallGray() {
	bodySmall()
	color $secondTextColor
	line-height 21px
}
bodySmallGrayItalic() {
	bodySmallGray()
	font-style italic
}
bodyXS() {
	font-size 12px
	font-weight normal
	line-height 16px

	@media $phone {
		font-size 14px
	}
}

bold() {
	font-size 18px
	font-weight $bold
	line-height 24px
}
boldMedium() {
	font-size 16px
	font-weight $bold
	line-height 17px
}
boldSmall() {
	font-size 14px
	font-weight $bold
	line-height 17px
}
